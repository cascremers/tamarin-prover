    --[
    Eq( z, true() ),
    SessionKeys( S, C, h(<'serverKey', nc, ns, PRF(<pms, nc, ns>)>),
                 h(<'clientKey', nc, ns, PRF(<pms, nc, ns>)>)
    )
    ]->
